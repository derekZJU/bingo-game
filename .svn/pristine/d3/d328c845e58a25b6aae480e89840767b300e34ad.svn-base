package dw35_wz23.server.model;

import common.ITextMsg;

/**
 * This text message class implements ITextMsg
 * 
 * @author dw35, wz23
 *
 */
public class TextMsg implements ITextMsg {
	/**
	 * Serial version ID
	 */
	private static final long serialVersionUID = 496881040613242946L;
	/**
	 * the text content
	 */
	private String content;

	/**
	 * Constructor of textMsg
	 * 
	 * @param str
	 *            the content
	 */
	public TextMsg(String str) {
		content = str;
	}

	/**
	 * get the text content
	 */
	@Override
	public String getText() {
		return content;
	}

	/**
	 * set the text content
	 * 
	 * @param str
	 *            the text content.
	 */
	public void setText(String str) {
		content = str;
	}
}